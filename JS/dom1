<html>
  <head>
    <script>
      function match() {
        var p1 = document.getElementById(p1).value;
        var p2 = document.getElementById(p2).value;
        if (p1 != p2) {
          alert("password should be same");
        } else {
          alert("successful submitted");
        }
      }
    </script>
  </head>

  <body>
    ENTER USER NAME:
    <input type="text" id="p1" placeholder="enter user name" /> RE-ENTER USER
    NAME: <input type="text" id="p2" placeholder="enter user name" />
    <button onclick="match()">click</button>
  </body>
</html>
